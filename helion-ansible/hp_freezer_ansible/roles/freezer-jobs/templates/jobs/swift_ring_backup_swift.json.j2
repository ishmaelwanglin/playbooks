{
    "job_actions": [
        {
            "freezer_action": {
                "action": "backup",
                "mode": "fs",
                "backup_name": "freezer_swifthlm_builddir_backup",
                "path_to_backup": "/etc/swiftlm/builder_dir/",
                "container": "freezer_swift_backup",
                "log_file": "{{ freezer_agent_log_file }}",
                "max_level": 14,
                "remove_older_than": 90,
                "snapshot": true
            },
            "max_retries": 5,
            "max_retries_interval": 600,
            "mandatory": true
        }
    ],
    "job_schedule": {
        "schedule_interval": "24 hours"
    },
    "description": "HLM Default: Swift backup to Swift"
}


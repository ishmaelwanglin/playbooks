[default]
action = restore
storage = ssh
ssh_host = {{ freezer_ssh_host }}
ssh_username = {{ freezer_ssh_username }}
ssh_key = /etc/freezer/ssh_key
container = {{ freezer_ssh_base_dir }}/freezer_deployer_backup
backup_name = freezer_deployer_backup
restore_abs_path = /home/
log_file = {{ freezer_agent_log_file }}
restore_from_host = {{ freezer_client_id }}
